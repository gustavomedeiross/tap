<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.CadProfessorController">
   <children>
      <VBox nodeOrientation="LEFT_TO_RIGHT">
         <children>
            <HBox prefHeight="31.0" prefWidth="536.0">
               <children>
                  <Label text="nome: " />
                  <TextField fx:id="txtNome" prefHeight="25.0" prefWidth="310.0">
                     <HBox.margin>
                        <Insets left="45.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <HBox>
               <children>
                  <Label alignment="CENTER" prefHeight="25.0" prefWidth="76.0" text="Nascimento: " />
                  <TextField fx:id="txtNascimento" prefHeight="25.0" prefWidth="112.0" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <HBox>
               <children>
                  <Label text="Sexo: " />
                  <RadioButton fx:id="rdMasc" mnemonicParsing="false" prefHeight="17.0" prefWidth="82.0" text="Masculino">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                     <toggleGroup>
                        <ToggleGroup fx:id="tgSexo" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="rdFemi" mnemonicParsing="false" prefHeight="17.0" prefWidth="82.0" text="Feminino" toggleGroup="$tgSexo">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </RadioButton>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <HBox>
               <children>
                  <Label text="E-mail: " />
                  <TextField fx:id="txtEmail" prefHeight="25.0" prefWidth="318.0">
                     <HBox.margin>
                        <Insets left="40.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <HBox>
               <children>
                  <Label text="telefone: " />
                  <TextField fx:id="txtTelefone" prefHeight="25.0" prefWidth="140.0">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <CheckBox fx:id="ckAtivo" mnemonicParsing="false" text="Ativo">
               <VBox.margin>
                  <Insets left="80.0" top="15.0" />
               </VBox.margin>
            </CheckBox>
            <HBox>
               <children>
                  <Button mnemonicParsing="false" onAction="#gravar" text="gravar">
                     <HBox.margin>
                        <Insets left="80.0" top="15.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="filtro: " />
                  <TextField fx:id="txtFiltro" prefHeight="25.0" prefWidth="301.0">
                     <HBox.margin>
                        <Insets left="45.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <TableView fx:id="tbl" prefHeight="200.0" prefWidth="750.0">
              <columns>
                <TableColumn fx:id="colNome" prefWidth="233.0" text="Nome" />
                <TableColumn fx:id="colTelefone" prefWidth="274.0" text="telefone" />
                  <TableColumn fx:id="colEmail" prefWidth="241.0" text="E-mail" />
              </columns>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
